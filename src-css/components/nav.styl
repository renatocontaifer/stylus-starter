/* Nav */

.wrapper-nav
  position relative

.logo
  replace()
  width 160px
  height 39px
  background url(../img/logotipo.svg) no-repeat
  background-size contain
  margin-top 10px
  +above(1024px)
    width 190px
  a
    display block
    width 100%
    height 100%

.menu-anchor
  position absolute
  right 15px
  top 15px
  font-size 1.8em!important
  cursor pointer
  +above(768px)
    display none!important

.close
  top 10px

.menu
  position fixed
  top 0
  right 0
  width 100%
  height 100%
  transform translateX(100%)
  transition transform 0.6s ease
  background $verde
  +above(768px)
    background transparent
    position absolute
    top 5px
    padding 0
    transform none
    width auto
    height auto

.menu.open
  transform translateX(0)

.menu-item
  padding 20px 20px
  border-bottom 1px solid #fff
  font-size 16px
  overflow hidden
  +above(768px)
    float left
    font-size 14px
    font-family 'montserratsemi_bold', sans-serif
    border-bottom none

.menu-link
  color #fff
  transition .2s all ease
  &:hover
    border-bottom 2px solid #fff
